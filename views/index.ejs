<!-- including header here -->
<%- include("partials/header.ejs") %>


<main>
  <div class="container list-unstyled py-5" >
    <div class="d-flex justify-content-center align-items-center gap-3 ">
      <a class="actionBtn" role="button" href="/create">Create</a>
     <a class="actionBtn" role="button" href="/view">View</a>
    </div>

    <% if(locals.title && locals.content){ %>
     <% for (let i = 0; i < title.length; i++) { %> 
      <div class="row mt-5 mb-5 justify-content-center ">
        <div class="col-md-8 col-9 text-bg-dark">
          <div class="d-flex p-4 flex-column justify-content-center">
            <h3><%= title[i] %></h3>
            <p><%= content[i] %></p>
            <div class="align-self-end">
              <a href="/edit/<%= i %>" class="actionBtn">Edit</a>
              <!-- <form action="/edit/<%= i %>" method="POST"">
                <button type="submit" class="actionBtn">Edit</button>
            </form>             -->
              <form action="/delete/<%= i %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <button type="submit" class="actionBtn">Delete</button>
            </form>            
            </div>
          </div>
        </div>
      </div>
    <% }} %>

  </div>
</main>


 <!-- including footer -->
<%- include("partials/footer.ejs") %>
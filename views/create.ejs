<!-- including header here -->
<%- include("partials/header.ejs") %>

    <% if(locals.titleValue && locals.contentValue){ %>
        <% const i = locals.indexValue %>
        <form class="mt-5" action="/update/<%= i %>" method="post">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 text-bg-dark">
                        <div class="d-flex p-5 flex-column justify-content-center">
                            <div class="mb-3">
                                <label for="formControlInput1" class="form-label">Title</label>
                                <input type="text" class="form-control" id="formControlInput1" name="title"
                                    placeholder="&quot;How to write a Blog post&quot;" value="<%= titleValue %>">
                            </div>
                            <div class="mb-3">
                                <label for="formControlTextarea1" class="form-label">Content</label>
                                <textarea class="form-control" id="formControlTextarea1" name="content"
                                    rows="5"> <%= contentValue %></textarea>
                            </div>
                            <button type="submit" class="btn btn-warning align-self-end">Update</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <% } else{ %>
            <form class="mt-5" action="/" method="post">
                <div class="container">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-6 text-bg-dark">
                            <div class="d-flex p-5 flex-column justify-content-center">
                                <div class="mb-3">
                                    <label for="formControlInput1" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="formControlInput1" name="title"
                                        placeholder="&quot;How to write a Blog post&quot;">
                                </div>
                                <div class="mb-3">
                                    <label for="formControlTextarea1" class="form-label">Content</label>
                                    <textarea class="form-control" id="formControlTextarea1" name="content"
                                        rows="5"></textarea>
                                </div>
                                <button type="submit" class="btn btn-warning align-self-end">Post</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <%} %>

                <!-- including footer -->
                <%- include("partials/footer.ejs") %>